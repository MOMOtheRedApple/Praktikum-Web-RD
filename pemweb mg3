    Select the weather type today:
    <select name="weather" id="weather" onchange="cuaca()">
        <option value="dry">dry</option>
        <option value="rainy">rainy</option>
    </select>
    <p id="cuaca2"></p>

    <script>
        function cuaca(){
            var jenismusim=document.getElementById("weather");

            if(jenismusim.value=="dry"){
                var cuaca=document.getElementById("cuaca2");
                cuaca.innerText = "It is nice and sunny outside today. Wear shorts! Go to the beach, or the park, and get a ice cream";
            }else if(jenismusim.value="rainy"){
                var cuaca=document.getElementById("cuaca2");
                cuaca.innerText = "Today is rain. Don't forget to bring umbrella or raincoat!";
            }
        }
    </script>

    Input number:
    <input type="number" name="angka" id="faktorial2">
    <button type="submit" onclick="faktorial()">Get Factorial</button>

    <script>
        function faktorial(){
            var faktor = document.getElementById("faktorial2");

              let hasil = 1;
              if (faktor.value == 0){
                hasil = 0;
              }else if(faktor.value == 1){
                  hasil=1;
              }else{
                for(var i = faktor.value; i >= 1; i--){
                  hasil = hasil * i;
                }
              }

            var result = document.getElementById("hasil");
                result.innerText = "The Factorial is " + hasil;
        }
    </script>
    <p id="hasil"></p>

